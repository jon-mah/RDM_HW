initialize()
{
  // Set a Seed to keep track of the type of simulation we are using.
  setSeed(chrom + (init_seed - 1) * 10000);
  initializeMutationRate(1e-6);

  // m1 mutation type: additive deleterious mutation
  initializeMutationType("m1", 0.5, "f", 0.0);

  // g1 genomic element type: uses m1 and m2 for all mutations
  initializeGenomicElementType("g1", m1, 1.0);

  // uniform chromosome of length 25 b with zero recombination
  initializeGenomicElement(g1, 0, 25);
  initializeRecombinationRate(1e-8);
}

